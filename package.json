{
    "name": "project-boilerplate",
    "version": "1.0.0",
    "description": "NodeJS project boilerplate",
    "main": "dist/server.js",
    "scripts": {
        "test": "jest",
        "build": "tsc",
        "start": "node dist/server.js",
        "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' -T src/server.ts",
        "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
        "m:run": "npm run typeorm migration:run",
        "m:generate": "npm run typeorm migration:generate -- -n",
        "clean-database": "npm run typeorm schema:drop && npm run typeorm migration:run"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/seidor-cloud-produtos/node-project-boilerplate.git"
    },
    "keywords": [
        "NodeJS",
        "Boilerplate",
        "Typescript",
        "TypeORM",
        "Mongoose"
    ],
    "author": "Andre Macedo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/seidor-cloud-produtos/node-project-boilerplate/issues"
    },
    "homepage": "https://github.com/seidor-cloud-produtos/node-project-boilerplate#readme",
    "devDependencies": {
        "@types/cors": "^2.8.8",
        "@types/dotenv": "^8.2.0",
        "@types/jest": "^26.0.15",
        "@types/pino-http": "^5.0.5",
        "@types/sinon": "^9.0.8",
        "@types/supertest": "^2.0.10",
        "@types/swagger-jsdoc": "^3.0.2",
        "@types/swagger-ui-express": "^4.1.2",
        "@types/yup": "^0.29.8",
        "@typescript-eslint/eslint-plugin": "^4.5.0",
        "@typescript-eslint/parser": "^4.5.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-config-prettier": "^6.13.0",
        "eslint-import-resolver-typescript": "^2.3.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.6.1",
        "mongodb-memory-server": "^6.9.2",
        "nodemon": "^2.0.6",
        "pre-push": "^0.1.1",
        "prettier": "^2.1.2",
        "sinon": "^9.2.0",
        "sqlite3": "^5.0.0",
        "supertest": "^5.0.0",
        "ts-jest": "^26.1.2",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "express-validator": "^6.6.1",
        "mongodb": "^3.6.2",
        "pg": "^8.4.1",
        "pino-http": "^5.3.0",
        "reflect-metadata": "^0.1.13",
        "swagger-jsdoc": "^4.3.0",
        "swagger-ui-express": "^4.1.4",
        "tsyringe": "^4.3.0",
        "typeorm": "^0.2.28",
        "yup": "^0.29.3"
    },
    "pre-push": {
        "silent": true,
        "run": [
            "build",
            "test"
        ]
    }
}
